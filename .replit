modules = ["cpp-clang14", "c-clang14", "web", "python-3.12"]
run = "dotnet run"

[nix]
channel = "stable-24_05"
packages = ["cmake"]

[workflows]
runButton = "Run Crow Server"

[[workflows.workflow]]
name = "C/C++"
author = 8572783
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "clang++ -std=c++17 -o output Learning_C_CPP/macro.cpp"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./output"

[[workflows.workflow]]
name = "Run Sockets"
author = 8572783
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "clang++ -std=c++17 -o output Learning_C_CPP/wsockets.cpp"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./output"

[[workflows.workflow]]
name = "Run"
author = 8572783
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "clang++ -std=c++20 -o output Learning_C_CPP/readings.cpp"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./output"

[[workflows.workflow]]
name = "Run Crow Server"
author = 8572783
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd Learning_C_CPP/3_lesson && clang++ -std=c++17 -I./Crow/include -lpthread -lsqlite3 -o main main.cpp && ./main"

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 8080
externalPort = 80

[deployment]
run = ["sh", "-c", "dotnet run"]

[agent]
expertMode = true
